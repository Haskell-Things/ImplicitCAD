   Hs-source-dirs: programs
   Build-depends:
                 aeson,
                 base,
                 bytestring,
                 implicit,
                 snap-core,
                 snap-server,
                 text,
                 utf8-string,
                 vector-space
   Ghc-options:
               -threaded
               -rtsopts "-with-rtsopts -N -qg -t"
--               -O2
               -optc-O3
--               -dynamic
               -- see GHC manual 8.2.1 section 6.5.1.
               -feager-blackholing
